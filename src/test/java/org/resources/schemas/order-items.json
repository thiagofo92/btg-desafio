{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Order",
  "type": "object",
  "properties": {
    "codigoPedido": {
      "type": "integer"
    },
    "codigoCliente": {
      "type": "integer"
    },
    "itens": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "produto": {
            "type": "string"
          },
          "quantidade": {
            "type": "integer"
          },
          "preco": {
            "type": "number"
          }
        },
        "required": [
          "produto",
          "quantidade",
          "preco"
        ]
      }
    }
  },
  "required": [
    "codigoPedido",
    "codigoCliente",
    "itens"
  ]
}
